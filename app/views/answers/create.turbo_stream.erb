<%# Step 1: empty the Turbo Frame containing the form %>
<%= turbo_stream.update nested_dom_id(@question, Answer.new), "" %>

<%# Step 2: append the created line item to the list %>
<%= turbo_stream.append nested_dom_id(@question, "questions") do %>
  <%= render @answer, quiz: @quiz, question: @question %>
<% end %>