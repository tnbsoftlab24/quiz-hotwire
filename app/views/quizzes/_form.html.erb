<%= form_for quiz, html: { class: "quiz form" } do |f| %>
  <% if quiz.errors.any? %>
    <div class="error-message">
      <ul>
          <% quiz.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
       <div class="col-md-12"> 
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, palceholder:"quiz title", class:"form-control"  %>
       </div>
    </div>
  </div>

  
  <%= link_to "Cancel", quizzes_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>